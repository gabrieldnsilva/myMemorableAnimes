{
	"name": "mymemorable-animes",
	"version": "2.0.0",
	"description": "Catálogo de animes com autenticação e lista personalizada por usuário",
	"main": "dist/server.js",
	"scripts": {
		"dev": "ts-node-dev --respawn --transpile-only src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"seed": "ts-node src/scripts/seedAnimes.ts"
	},
	"keywords": [
		"anime",
		"nodejs",
		"express",
		"typescript",
		"sequelize",
		"sqlite",
		"mvc"
	],
	"author": "Gabriel Danilo",
	"license": "MIT",
	"dependencies": {
		"express": "^4.18.2",
		"ejs": "^3.1.9",
		"sequelize": "^6.35.2",
		"sqlite3": "^5.1.7",
		"bcrypt": "^5.1.1",
		"jsonwebtoken": "^9.0.2",
		"dotenv": "^16.3.1",
		"cors": "^2.8.5",
		"helmet": "^7.1.0",
		"express-validator": "^7.0.1",
		"cookie-parser": "^1.4.6"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/node": "^20.10.6",
		"@types/bcrypt": "^5.0.2",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/cors": "^2.8.17",
		"@types/cookie-parser": "^1.4.6",
		"@types/jest": "^29.5.11",
		"@types/supertest": "^6.0.2",
		"typescript": "^5.3.3",
		"ts-node-dev": "^2.0.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"supertest": "^6.3.3",
		"eslint": "^8.56.0",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
