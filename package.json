{
	"name": "mymemorable-animes",
	"version": "2.0.0",
	"description": "Catálogo de animes com autenticação e lista personalizada por usuário",
	"main": "dist/server.js",
	"scripts": {
		"dev": "concurrently \"npm run dev:css\" \"npm run dev:server\" \"npm run seed\"",
		"dev:css": "tailwindcss -i ./src/styles/input.css -o ./public/css/output.css --watch",
		"dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
		"build": "npm run build:css && tsc && npm run copy-views",
		"build:css": "NODE_ENV=production tailwindcss -i ./src/styles/input.css -o ./public/css/output.css --minify",
		"copy-views": "copyfiles -u 1 \"src/views/**/*\" dist/",
		"start": "node dist/scripts/seedAnimes.js && node dist/server.js",
		"start:dev": "npm run seed && node dist/server.js",
		"test": "jest --coverage",
		"test:watch": "jest --watch",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"seed": "ts-node src/scripts/seedAnimes.ts",
		"seed:prod": "node dist/scripts/seedAnimes.js"
	},
	"keywords": [
		"anime",
		"nodejs",
		"express",
		"typescript",
		"sequelize",
		"sqlite",
		"mvc"
	],
	"author": "Gabriel Danilo",
	"license": "MIT",
	"dependencies": {
		"axios": "^1.13.2",
		"bcrypt": "^5.1.1",
		"connect-flash": "^0.1.1",
		"cookie-parser": "^1.4.6",
		"cors": "^2.8.5",
		"dotenv": "^16.3.1",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-session": "^1.18.2",
		"express-validator": "^7.0.1",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"sequelize": "^6.35.2",
		"sqlite3": "^5.1.7"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/connect-flash": "^0.0.40",
		"@types/cookie-parser": "^1.4.6",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.2",
		"@types/jest": "^29.5.11",
		"@types/jsonwebtoken": "^9.0.5",
		"@types/node": "^20.10.6",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.2.1",
		"copyfiles": "^2.4.1",
		"eslint": "^8.56.0",
		"jest": "^29.7.0",
		"postcss": "^8.5.6",
		"supertest": "^6.3.3",
		"tailwindcss": "^3.4.18",
		"ts-jest": "^29.1.1",
		"ts-node-dev": "^2.0.0",
		"typescript": "^5.3.3"
	},
	"engines": {
		"node": ">=18.0.0",
		"npm": ">=9.0.0"
	}
}
