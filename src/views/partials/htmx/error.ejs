<!-- Error message for adding anime to list -->
<div
	x-data="{ show: true }"
	x-show="show"
	x-init="setTimeout(() => show = false, 5000)"
	class="fixed top-4 right-4 bg-red-500 text-white px-6 py-4 rounded-lg shadow-lg z-50 flex items-center space-x-3"
>
	<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path
			stroke-linecap="round"
			stroke-linejoin="round"
			stroke-width="2"
			d="M6 18L18 6M6 6l12 12"
		></path>
	</svg>
	<span><%= error %></span>
	<button @click="show = false" class="ml-4 font-bold hover:text-gray-200">
		âœ•
	</button>
</div>
